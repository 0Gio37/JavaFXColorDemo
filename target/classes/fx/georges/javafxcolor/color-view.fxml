<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane onMouseEntered="#setColorsParameters" prefHeight="250.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.georges.javafxcolor.controller.ColorController">
   <children>
      <VBox prefHeight="300.0" prefWidth="600.0">
         <children>
            <Label fx:id="msgWrong" prefHeight="17.0" prefWidth="603.0" textFill="#da1414" />
            <HBox prefHeight="300.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="300.0" prefWidth="395.0">
                     <children>
                        <Label text="Red" />
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Slider fx:id="redSlider" max="255.0" prefWidth="250.0">
                                 <padding>
                                    <Insets top="5.0" />
                                 </padding>
                              </Slider>
                              <TextField fx:id="redValueField" onInputMethodTextChanged="#setColorsParameters" prefHeight="26.0" prefWidth="50.0">
                                 <HBox.margin>
                                    <Insets left="40.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <Label text="Green" />
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Slider fx:id="greenSlider" max="255.0" prefHeight="16.0" prefWidth="250.0">
                                 <padding>
                                    <Insets top="5.0" />
                                 </padding>
                              </Slider>
                              <TextField fx:id="greenValueField" prefWidth="50.0">
                                 <HBox.margin>
                                    <Insets left="40.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <Label text="Blue" />
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Slider fx:id="blueSlider" max="255.0" prefWidth="250.0" />
                              <TextField fx:id="blueValueField" prefWidth="50.0">
                                 <HBox.margin>
                                    <Insets left="40.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
                     </padding>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="400.0" prefWidth="252.0">
                     <children>
                        <Label text="Hexa Value" />
                        <TextField fx:id="hexValueField" />
                        <Pane fx:id="paneBackground" prefHeight="154.0" prefWidth="169.0" style="-fx-background-color: green;">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </Pane>
                     </children>
                     <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
