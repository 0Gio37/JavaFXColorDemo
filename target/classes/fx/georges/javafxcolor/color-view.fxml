                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label fx:id="msgWrong" alignment="CENTER" prefHeight="17.0" prefWidth="603.0" textAlignment="JUSTIFY" textFill="#da1414" textOverrun="CENTER_WORD_ELLIPSIS">
