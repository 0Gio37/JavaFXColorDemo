   <children>
      <VBox prefHeight="300.0" prefWidth="698.0">
         <children>
            <MenuBar prefHeight="28.0" prefWidth="679.0">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Sauvegarder" />
